<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <style>
      table {
        width: 100%;
      }
      th {
        text-align: left;
      }
    </style>
  </head>
  <body>
    <div>
      <h1>Passengers</h1>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Flight Number</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
          <% if (passengers.length > 0) { %> <% passengers.forEach(passenger =>
          { %>
          <tr>
            <td><%= passenger.name %></td>
            <td><%= passenger.flightNumber %></td>
            <td><%= passenger.time %></td>
          </tr>
          <% }); %> <% } %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="2"><%=passengers.length%> passengers</td>
          </tr>
        </tfoot>
      </table>
    </div>
  </body>
</html>
